<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task|  %>
     <li><%= link_to task.title, task_path(task) %>
    <% if task.completed %>
       <%= check_box('completed', task.completed, :checked => true) %>
       <% else %>
       <%= check_box('completed', task.completed, :checked => false) %>
    <% end  %>
      <br>
      <%= link_to "Edit Task", "tasks/#{task.id}/edit" %>
     </li>
  <% end %>
</ul>

<%= link_to "New Task", 'tasks/new' %>

