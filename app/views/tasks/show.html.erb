<h1><%= @task.title %></h1>

<h3> Details: <%= @task.details%></h3>

<% if @task.completed %>
  <h3> <%= check_box('completed', @task.completed, :checked => true) %>task completed!</h3>
<% else %>
  <h3> <%= check_box('completed', @task.completed) %>task not completed yet!</h3>
<% end %>
<%= link_to "Back to Tasks", tasks_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" }%>
